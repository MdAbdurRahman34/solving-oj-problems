#include<bits/stdc++.h>
using namespace std;
main()
{
    int count=0,i,j=0,n,m,a1;
    cin>>n>>m;
    int a[n];
    for(i=0;i<n;i++) cin>>a[i];
    for(i=0;i<m;i++)
    {
        cin>>a1;
        while(j<n)
        {
            if(a[j]<=a1)
            {
                count++;j++;break;
            }
            else
                j++;
        }
    }
    cout<<count<<endl;
}
